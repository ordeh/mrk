unit Nine;

interface

uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs, StdCtrls;

type
  TFormNine = class(TForm)
    EditInput: TEdit;
    LabelInput: TLabel;
    LabelList: TLabel;
    LabelTitle: TLabel;
    ListBoxEd: TListBox;
    ButtonConvert: TButton;
    ButtonHelp: TButton;
    LabelResult: TLabel;
    procedure FormCreate(Sender: TObject);
    procedure ButtonHelpClick(Sender: TObject);
    procedure ButtonConvertClick(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  FormNine: TFormNine;

implementation

{$R *.dfm}

procedure TFormNine.ButtonConvertClick(Sender: TObject);
var p, kg, k, k1 : real;
begin
 case
 ListBoxEd.ItemIndex of
  0 :k1 := 2.54;
  1 :k := 30.5;
  2 :k := 91;
  3 :k := 160900;
end;
 p := StrToFloat(EditInput.Text);
 kg := p * k1;
 LabelResult.Caption := EditInput.Text + ' фунтов = ' +
 FloatToStr(kg) + ' см';
 EditInput.SetFocus;
end;

procedure TFormNine.ButtonHelpClick(Sender: TObject);
begin
MessageDlg('ѕереводные единицы:' +#13#10#10+
   '1 дюйм = 2,54 см; ' + #13#10 +
   '1 фут = 30,5 см;' + #13#10 +
   '1 €рд = 91 см;' + #13#10 +
   '1 мил€ = 160 900 см. ',mtInformation,[mbOk],0);
end;

procedure TFormNine.FormCreate(Sender: TObject);
begin
with ListBoxEd.Items do
begin
   Add('дюймы');
   Add('футы');
   Add('€рды');
   Add('мили');
end;
ListBoxEd.ItemIndex := 1;
end;

end.
